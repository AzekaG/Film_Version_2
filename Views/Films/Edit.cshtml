@model Film_Version_2.Models.Film

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="changes">
    <h4>Изменение</h4>
    <div class="row" style=" display: flex; margin-top:5%">
    <div class="col-md-4" >
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jenre" class="control-label"></label>
                <input asp-for="Jenre" class="form-control" />
                <span asp-validation-for="Jenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Poster" class="control-label"></label>
                <input asp-for="Poster" class="form-control" type="file" name="uploadedFile" />
               
                
                <br />
                <input asp-for="Poster" class="form-control" type="submit" value="Загрузить" />
            </div>
            <div>
                <a asp-action="Index" style="text-decoration:none">Вернуться на главную</a>
            </div>
        </form>
    </div>
    <img src="@Model.Poster" style="max-width: 60% ; max-height:660px; />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
