@model IEnumerable<Film_Version_2.Models.Film>  //по какой модели типизируетя вьюшка. В этом случае - films

@{
    ViewData["Title"] = "Главная";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align: center">Топ 10 фильмов , рекомендуемых Люмьер</h1>

<p class="btn_helper_CreateNew">
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer)
            </td>
            <td>
               <img src="@item.Poster" style="width:128px;height:128px;"  />
            </td>
            <td class="btn_helpers_Index_Cre_del_edit">
                <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration:none"><i>Изменить</i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none"><i>Подробности</i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration:none"><i>Удалить</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
